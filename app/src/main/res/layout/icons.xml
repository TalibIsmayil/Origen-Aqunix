<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:weightSum="5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_width="60dp"
        app:cardCornerRadius="10dp"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/my_garden_image"
            android:scaleType="centerCrop"
            android:src="@drawable/pexels"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_name"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:textStyle="bold"
            android:text="Aaron's Beard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/my_desc"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:text="Hypericum calycium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/image1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/water"
                android:background="#0fc9c8"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/image2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            <ImageView
                android:scaleType="centerCrop"
                android:background="#DC2B57"
                android:padding="5dp"
                android:src="@drawable/poision"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/image3"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            <ImageView
                android:scaleType="centerCrop"
                android:padding="5dp"
                android:background="#F1AC31"
                android:src="@drawable/lapatka"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="5dp"
                android:id="@+id/image4"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp">

                <ImageView

                    android:background="#905ECA"
                    android:padding="5dp"
                    android:src="@drawable/seed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>